@page
@model CSIT_Project.Pages.CafeManager.ViewStaffsModel
@{
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/CafeManager/Index">Cafe Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/CafeManager/Index">Work Slots</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/CafeManager/ViewStaffs">Staffs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/CafeManager/ViewStaffBid">Pending Bids</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex">
                <a class="btn btn-primary" asp-area="" asp-page="/Logout">Logout</a>
            </div>
        </div>
    </nav>
</header>

<h2>List of Users</h2>
<form method="post">
    <input type="text" name="SearchStaffs" value="@Model.search" />
    <button type="submit"> search </button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Role</th>
            <th>Total Work Slots</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listStaffs)
        {
            @if (item.status)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.username</td>
                    <td>@item.name</td>
                    <td>@item.email</td>
                    <td>@item.phone</td>
                    <td>@item.address</td>
                    <td>@item.role</td>
                    <td>@item.TotalWorkSlots</td>
                </tr>
            }
        }
    </tbody>
</table>

<div class="text-center mt-3">
    <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
</div>