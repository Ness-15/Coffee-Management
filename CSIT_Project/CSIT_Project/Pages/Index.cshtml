@page
@model IndexModel
@{
    ViewData["Title"] = "Login page";
}

<head>
    <title>Login Page</title>
    <style>
        body {
            background-color: #f4f4f4;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        #container {
            max-width: 600px;
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        #pageTitle {
            font-size: 24px;
            font-weight: bold;
            margin-top: 20px;
            color: #007bff;
        }

        #loginText {
            margin-top: 20px;
        }

        form {
            margin-top: 20px;
        }

        label {
            width: 150px;
            display: inline-block;
            margin-bottom: 10px;
            color: #333;
        }

        input, select {
            width: calc(100% - 20px);
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .error-message {
            font-weight: bold;
            color: red;
            margin-top: 10px;
        }

        button {
            width: calc(100% - 20px);
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            box-sizing: border-box;
        }

            button:hover {
                background-color: #0056b3;
            }
    </style>
</head>

<body>
    <div id="container">
        <div id="pageTitle">
            Alpha Cafe Management System
        </div>

        <form method="POST">
            <div>
                <label>Email</label>
                <input type="text" class="form-control" name="email" value="@Model.email" required>
            </div>

            <div>
                <label>Password</label>
                <input type="password" class="form-control" name="password" value="@Model.password" required>
            </div>

            <div>
                <label>Staff Type</label>
                <select name="stafftype" id="stafftype" required>
                    <option value="">-- Select Staff Type --</option>
                    <option value="4">System Admin</option>
                    <option value="1">Cafe Owner</option>
                    <option value="2">Cafe Manager</option>
                    <option value="3">Cafe Staff</option>
                </select>
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

            <div>
                @if (!String.IsNullOrEmpty(HttpContext.Session.GetString("errorMessage")))
                {
                    <div class="error-message">
                        @Html.Raw(HttpContext.Session.GetString("errorMessage"))
                    </div>
                }
            </div>
        </form>
    </div>
</body>
