@page
@model CSIT_Project.Pages.WorkSlots.ViewManagerModel
@{
}

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #000; /* Add a border to each cell */
        padding: 8px;
        text-align: left;
    }

    .light-button {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 5px;
        color: #fff;
        font-weight: bold;
        transition: filter 0.3s;
    }

        .light-button.green {
            background-color: green;
        }

        .light-button.red {
            background-color: red;
        }

        .light-button:hover {
            filter: brightness(1.2);
        }


</style>

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/CafeOwner/WorkSlots/Index">Cafe Owner</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/CafeOwner/WorkSlots/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/CafeOwner/WorkSlots/Index">Work Slots</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/CafeOwner/WorkSlots/ViewManager">View Manager</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-page="/CafeOwner/WorkSlots/SearchWorkSlots">Search WorkSlots</a>
                    </li>
                </ul>
            </div>
            <div class="d-flex">
                <a class="btn btn-primary" asp-area="" asp-page="/Logout">Logout</a>
            </div>
        </div>
    </nav>
</header>

<table class="table">
    <thead>
        <tr>
            <th>#</th> <!-- Add a header for the count column -->
            <th>Account ID</th>
            <th>username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Staff Type</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listManagers)
        {
            <tr>
                <td>@(Model.listManagers.IndexOf(item) + 1)</td> <!-- Add the count using the index + 1 -->
                <td>@item.id</td>
                <td>@item.username</td>
                <td>@item.name</td>
                <td>@item.email</td>
                <td>@item.phone</td>
                <td>@item.address</td>
                <td>@item.stafftype</td>
                <td>
                    @if (item.status)
                    {
                        <span class="light-button green">Active</span>
                    }
                    else
                    {
                        <span class="light-button red">Inactive</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

