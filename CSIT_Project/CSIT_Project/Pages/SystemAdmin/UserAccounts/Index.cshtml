<h2>List of Users</h2>
<a class='btn btn-primary btn-sm' href='/SystemAdmin/UserAccounts/Create'>New User</a>
<form method="post">
    <input type="text" name="SearchUserAccount" value="@Model.search" />
    <button type="submit"> search </button>
</form>
<div id="createMessage" class="alert alert-success alert-dismissible fade show" role="alert" style="display: none;">
    New User added
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div id="deleteMessage" class="alert alert-success alert-dismissible fade show" role="alert" style="display: none;">
    User deleted
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div id="editMessage" class="alert alert-success alert-dismissible fade show" role="alert" style="display: none;">
    User info edited
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>username</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Staff Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.listUsers)
        {
            @if (item.status)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.username</td>
                    <td>@item.name</td>
                    <td>@item.email</td>
                    <td>@item.phone</td>
                    <td>@item.address</td>
                    <td>@item.stafftype</td>
                    <td>
                    <a class="btn btn-primary btn-sm" href="/SystemAdmin/UserAccounts/Edit?id=@item.id">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/SystemAdmin/UserAccounts/Delete?id=@item.id">Suspend</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>